{
  // ! 自動保存したくない場合はコメントアウトする
  "files.autoSave": "afterDelay",

  // ファイル設定
  "files.autoSaveDelay": 100,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // フォーマット設定
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  // エディタ設定
  "editor.copyWithSyntaxHighlighting": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.showFoldingControls": "always",
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?　、。！？「」【】『』（）",
  "editor.wordWrap": "on",
  "editor.minimap.maxColumn": 50,
  "editor.minimap.showSlider": "mouseover",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // ワークベンチ設定
  "workbench.iconTheme": "vscode-icons",

  // git設定
  "git.autofetch": true,

  // 各言語、ファイル固有設定
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "Prettier-SQL.expressionWidth": 50,
  "Prettier-SQL.ignoreTabSettings": true,
  "Prettier-SQL.tabSizeOverride": 2,
  "Prettier-SQL.insertSpacesOverride": true,
  "Prettier-SQL.keywordCase": "upper",
  "Prettier-SQL.SQLFlavourOverride": "postgresql",

  "[csv]": {
    "editor.wordWrap": "off"
  },

  "[python]": {
    "editor.tabSize": 4
  },

  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "liveServer.settings.fullReload": true,
  "liveServer.settings.wait": 10,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always"
}
